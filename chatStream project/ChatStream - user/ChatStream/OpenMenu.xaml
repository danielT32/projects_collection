<UserControl x:Class="ChatStream.OpenMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatStream"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <TextBlock Text="Welcome" Grid.Row="0" FontSize="120" Foreground="White" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
        <TextBlock Text="ChatStream Menu" Grid.Row="1" FontSize="40" Foreground="#C9FFF6" VerticalAlignment="Top" HorizontalAlignment="Center"/>

    </Grid>
</UserControl>
